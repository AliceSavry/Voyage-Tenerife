<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Carte Interactive de Tenerife</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        html, body { width: 100%; height: 100%; margin: 0; padding: 0; }
        #map { height: 90vh; width: 100%; }
        h1 { text-align: center; font-family: Arial, sans-serif; padding: 10px; }
    </style>
    <!-- Importation des styles Leaflet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.css" />
</head>
<body>

    <!-- Titre de la page -->
    <h1>Carte Interactive de Tenerife</h1>

    <!-- Div pour la carte -->
    <div id="map"></div>

    <!-- Script Leaflet -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>

    <script>
        // Initialisation de la carte
        var map = L.map('map').setView([28.0491, -16.7191], 10);

        // Charger les tuiles de fond OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Fonction pour créer une icône colorée
        function createIcon(color) {
            return new L.Icon({
                iconUrl: `https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-${color}.png`,
                iconSize: [25, 41],
                iconAnchor: [12, 41],
                popupAnchor: [1, -34],
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/images/marker-shadow.png',
                shadowSize: [41, 41]
            });
        }

        // Icône de couleur verte
        var greenIcon = createIcon('green');

        // Ajout des marqueurs avec le lien Google Images
        L.marker([28.0491, -16.7191], {icon: greenIcon}).addTo(map)
            .bindPopup("<b>Plage de Las Vistas</b><br><a href='https://www.google.com/search?tbm=isch&q=Plage+de+Las+Vistas' target='_blank'>Voir sur Google Images</a>");
        L.marker([28.0733, -16.7301], {icon: greenIcon}).addTo(map)
            .bindPopup("<b>Siam Mall</b><br><a href='https://www.google.com/search?tbm=isch&q=Siam+Mall+Tenerife' target='_blank'>Voir sur Google Images</a>");
        L.marker([28.3549, -16.3735], {icon: greenIcon}).addTo(map)
            .bindPopup("<b>Basilique de Candelaria</b><br><a href='https://www.google.com/search?tbm=isch&q=Basilique+de+Candelaria' target='_blank'>Voir sur Google Images</a>");
        L.marker([28.4698, -16.2546], {icon: greenIcon}).addTo(map)
            .bindPopup("<b>Santa Cruz de Tenerife</b><br><a href='https://www.google.com/search?tbm=isch&q=Santa+Cruz+de+Tenerife' target='_blank'>Voir sur Google Images</a>");
        L.marker([28.2724, -16.6425], {icon: greenIcon}).addTo(map)
            .bindPopup("<b>Parc national du Teide</b><br><a href='https://www.google.com/search?tbm=isch&q=Parc+national+du+Teide' target='_blank'>Voir sur Google Images</a>");
    </script>
</body>
</html>
